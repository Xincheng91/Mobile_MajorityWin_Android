<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
 	    android:id="@+id/Button_Cancle_Create"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="top"
 	    android:layout_marginLeft="15dp"
 	    android:layout_marginTop="15dp"
 	    android:text="@string/Text_Back" />
    
    <TextView
        android:id="@+id/TextView_RoomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:text="@string/Text_Room_Number" />
     
   <Button
       android:id="@+id/Button_Enter_Room"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="20dp"
       android:text="@string/Text_Enter" />
   
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="30dp"
       android:text="@string/Text_Invite_Friends" />
   
   <ImageView
       android:id="@+id/qrCode"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="50dp" />
   
</LinearLayout>
